<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="@dimen/interval"
    android:paddingRight="@dimen/interval"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_add_remind"
        >
        <View
            android:layout_width="@dimen/ic_normal"
            android:layout_height="@dimen/ic_normal"
            android:background="@drawable/ic_add_alert_24dp"
            android:backgroundTint="@color/mainColor"
            />
        <TextView
            android:layout_marginLeft="@dimen/interval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加提醒"
            android:gravity="center"
            android:textColor="#000000"/>
    </LinearLayout>

</LinearLayout></layout>