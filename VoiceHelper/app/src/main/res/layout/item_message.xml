<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="sunmoon.com.helper.bean.MessageInfo"/>
        <variable
            name="message"
            type="MessageInfo"/>
    </data>
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_big"
    >
    <com.sunmoon.sunui.CircleImageView
        android:id="@+id/iv_icon"
        android:src="@drawable/ic_voice"
        android:layout_centerVertical="true"
        style="@style/normal_image_view" />
    <TextView
        android:id="@+id/tv_title"
        android:text="@{message.title}"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_marginTop="17dp"
        style="@style/normal_text_view" />
    <TextView
        android:text="@{message.recentContent}"
        android:layout_below="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        style="@style/small_tip_text_view" />
    <TextView
        android:text="@{message.time}"
        style="@style/time_text_view" />
</RelativeLayout>
</layout>